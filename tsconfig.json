{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
